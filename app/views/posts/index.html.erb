<div class="row mb-2">
    <% @posts.each do |post| %>
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="mb-0"><%= post.title %> </strong>
       <h3 class="d-inline-block mb-2 "> <%= post.model %></h3>
        <h5><%= post.letnik %></h5>
        <h6><%= post.km %> km</h6>
        <div class="mb-1 text-muted"><%= post.cena %>â‚¬</div>
        <p class="card-text mb-auto"><%= time_ago_in_words(post.created_at) %></p>






        <%= display_index_post_links(post) %>
      </div>
      <%= image_tag post.photo, class:"card-img-right flex-auto d-none d-md-block", width: 350, height: 250 if post.photo.attached? %>
    </div>
    </div>
    <% end %>

